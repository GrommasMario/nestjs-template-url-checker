{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl" : "./src",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@common/*": ["./common/*"],
      "@shared/*": ["./shared/*"],
      "@config/*": ["./config/*"],
      "@api/*": ["./api/*"],
      "@bootstraps/*": ["./bootstraps/*"],
    }
  },
}
