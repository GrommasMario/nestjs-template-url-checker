{
  "name": "url-checker",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:client-api": "nest start --entryFile bootstraps/client-api/main",
    "start:coordinator": "nest start --entryFile bootstraps/coordinator/main",
    "start:workers": "nest start --entryFile bootstraps/workers/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pg:migration:up": "sequelize-cli db:migrate",
    "pg:seed:up": "sequelize-cli db:seed:all",
    "migrate-all": "yarn run pg:migration:up && yarn run pg:seed:up"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "log4js": "^6.9.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.1",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "undici": "^6.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@domain/(.*)": ["<rootDir>/../src/domain/$1"],
      "@common/(.*)": ["<rootDir>/../src/common/$1"],
      "@shared/(.*)": ["<rootDir>/../src/shared/$1"],
      "@config/(.*)": ["<rootDir>/../src/config/$1"],
      "@api/(.*)": ["<rootDir>/../src/api/$1"],
      "@bootstraps/(.*)": ["<rootDir>/../src/bootstraps/$1"]
    }
  }
}
